WindowManager:
    EntryLayout:
    ViewerScreen:

<EntryLayout>:
    name: "entry"
    date:date
    r0:r0
    r1:r1
    r2:r2
    r3:r3
    r4:r4
    r5:r5
    r6:r6
    r7:r7
    r8:r8
    r9:r9

    GridLayout:
        cols:1
        size: 100, 200
        Label:
            id: top_label
            text: "I am happy and greatful because..."
            font_size: 36
            size_hint_y: 0.4

        GridLayout:
            cols:2

            Label:
                text: "Date (MM-DD-YYYY)"
            TextInput:
                id:date
                multiline: False
            
            Label:
                text: "1"
            TextInput:
                id:r0
                multiline: False
            
            Label:
                text: "2"
            TextInput:
                id:r1
                multiline: False
            
            Label:
                text: "3"
            TextInput:
                id:r2
                multiline: False
            
            Label:
                text: "4"
            TextInput:
                id:r3
                multiline: False

            Label:
                text: "5"
            TextInput:
                id:r4
                multiline: False

            Label:
                text: "6"
            TextInput:
                id:r5
                multiline: False

            Label:
                text: "7"
            TextInput:
                id:r6
                multiline: False

            Label:
                text: "8"
            TextInput:
                id:r7
                multiline: False

            Label:
                text: "9"
            TextInput:
                id:r8
                multiline: False

            Label:
                text: "10"
            TextInput:
                id:r9
                multiline: False
        
            Button:
                text: "View Entries"
                font_size:16
                on_press: 
                    app.root.current = "viewer"
            Button:
                text: "Submit"
                font_size:16
                on_press: root.submit()
                

<ViewerScreen>:
    name: "viewer"
    size: root.width, root.height
    date:date

    GridLayout:
        cols: 1
        size: root.width, root.height
        Label:
            id: "record"
            text: "Enter date you wish to view"
        
        GridLayout:
            cols: 2
            
            Label:
                text: "Enter Date"
            TextInput:
                id: date
                multiline: False

            Button:
                text: "Create New Entry"
                size_y: 0.1
                font_size: 16
                on_press: app.root.current = "entry"            
            Button:
                text: "Submit Date"
                size_y: 0.1
                font_size: 16
                on_press: root.show_records()



