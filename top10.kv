<EntryLayout>
    date:date
    r1:r1
    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Date (MM-DD-YYYY)"
            TextInput:
                id:date
                multiline: False
            
            Label:
                text: "Reason 1"
            TextInput:
                id:r1
                multiline: False
        
        Button:
            text: "Submit"
            font_size:32
            on_press: root.submit()
        
